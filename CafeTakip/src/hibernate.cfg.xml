<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/Kafe</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.default_schema">APP</property>
    <mapping resource="orm/Urun.hbm.xml"/>
    <mapping resource="orm/Sira.hbm.xml"/>
    <mapping resource="orm/Kisi.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
